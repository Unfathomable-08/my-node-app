<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Marks</title>
    <link rel="stylesheet" href="/css/index.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>
    <div class="container">
        <h1>Marks</h1>
        <div class="link">
            <p class="link-text"></p>
            <button onclick="copyLink()"><i class="fa fa-copy"></i></button>
        </div>
        <div class="quiz-box marks-cont">
            <table class="marks-table">
                <thead>
                    <tr>
                        <td>Name</td>
                        <td>Marks</td>
                    </tr>
                </thead>
                <% data.forEach(res=>{ %>
                    <tr>
                        <td>
                            <%= res.username %>
                        </td>
                        <td>
                            <%= res.marks %>
                        </td>
                    </tr>
                <% }) %>
            </table>
        </div>
    </div>

    <script>
        const searchParams = new URLSearchParams(window.location.search);
        const username = searchParams.get('username');

        const el = document.getElementsByClassName('link-text')[0];
        el.innerHTML = `funspark.vercel.app/quizzes?username=${username}`;

        function copyLink() {
            navigator.clipboard.writeText(`funspark.vercel.app/quizzes?username=${username}`)
            .catch(function(err) {
                console.error("Error copying text: ", err);
            });
        };

    </script>
</body>
</html>